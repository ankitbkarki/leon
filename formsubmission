// Contact form submission script
document.addEventListener('DOMContentLoaded', function() {
    const contactForm = document.getElementById('contact-form');
    if (contactForm) {
        contactForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Reset error messages
            document.querySelectorAll('.text-red-500').forEach(el => el.classList.add('hidden'));
            document.getElementById('form-message').classList.add('hidden');
            
            // Get form data
            const formData = new FormData(this);
            const submitButton = this.querySelector('button[type="submit"]');
            const submitText = submitButton.querySelector('.submit-text');
            const loadingText = submitButton.querySelector('.loading-text');
            
            // Show loading state
            submitText.classList.add('hidden');
            loadingText.classList.remove('hidden');
            submitButton.disabled = true;
            
            try {
                // Check if reCAPTCHA is available
                if (typeof grecaptcha !== 'undefined') {
                    // Execute reCAPTCHA
                    const token = await grecaptcha.execute('6LeSoP4qAAAAAHGOMEVZTFeifzZwvvg96pSOjKjK', {action: 'submit'});
                    formData.append('g-recaptcha-response', token);
                }
                
                // Try to submit to the backend
                const response = await fetch(this.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'Accept': 'application/json'
                    },
                    mode: 'cors'
                });
                
                if (response.ok) {
                    const result = await response.json();
                    showMessage(result.message || 'Thank you for your message! We will get back to you soon.', 'success');
                    this.reset();
                } else {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
            } catch (error) {
                console.error('Form submission error:', error);
                
                // Fallback: Show success message and log form data
                const formDataObj = {};
                formData.forEach((value, key) => {
                    formDataObj[key] = value;
                });
                
                console.log('Form data that would be sent:', formDataObj);
                
                // Show success message (in a real scenario, you'd want to actually send this data)
                showMessage('Thank you for your message! We will get back to you soon. (Demo mode - form data logged to console)', 'success');
                this.reset();
                
            } finally {
                // Reset button state
                submitText.classList.remove('hidden');
                loadingText.classList.add('hidden');
                submitButton.disabled = false;
            }
        });
    }
    
    // Helper function to show messages
    function showMessage(message, type) {
        const messageDiv = document.getElementById('form-message');
        messageDiv.textContent = message;
        messageDiv.classList.remove('hidden');
        
        if (type === 'success') {
            messageDiv.classList.remove('bg-red-100', 'text-red-700');
            messageDiv.classList.add('bg-green-100', 'text-green-700');
        } else {
            messageDiv.classList.remove('bg-green-100', 'text-green-700');
            messageDiv.classList.add('bg-red-100', 'text-red-700');
        }
        
        // Auto-hide success messages after 5 seconds
        if (type === 'success') {
            setTimeout(() => {
                messageDiv.classList.add('hidden');
            }, 5000);
        }
    }
});
